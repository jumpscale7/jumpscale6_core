#!/usr/bin/env python
from JumpScale import j
import argparse
j.application.start("jpackages")
import JumpScale.baselib.jpackages


parser = argparse.ArgumentParser()
parser.add_argument('-u','--package',required=False, help='Name of jpackage to be installed')
args = parser.parse_args()


print "upload package to blobstor"
if args.package:
    package = j.packages.find(args.package)
    if package:
        package = package[0]
else:
    package=j.packagesi.find()
package.install()

j.application.stop()
