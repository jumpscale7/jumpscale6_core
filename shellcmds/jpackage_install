#!/usr/bin/env python
from JumpScale import j
import argparse
j.application.start("jpackages")
import JumpScale.baselib.jpackages


parser = argparse.ArgumentParser()
parser.add_argument('-u','--package',required=False, help='Name of jpackage to be installed')
parser.add_argument('-r','--reinstall', action='store_true', required=False, help='Name of jpackage to be installed')
args = parser.parse_args()


if args.package:
    package = j.packages.find(args.package)
    if package:
        package = package[0]
else:
    package=j.packagesi.find()

if not package:
    print "Could not find package with name %s" % args.package
    j.application.stop(1)

package.install(reinstall=args.reinstall)
j.application.stop()
